<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--   题目-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1ABC9C">
<!--        <ImageButton-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--           -->
<!--            android:src="@drawable/back"-->
<!--            >-->
<!--        </ImageButton>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="帮助"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:gravity="center"
        ></TextView>
</LinearLayout>

<!--站站查询-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:text="站站查询功能介绍"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="23dp"
            android:textColor="@color/black"
            ></TextView>
        <ImageButton
            android:id="@+id/station_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arrow"
            android:gravity="right"
            android:background="@color/white"
            >

        </ImageButton>
    </LinearLayout>
<!--车次查询-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:text="车次查询功能介绍"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="23dp"
            android:textColor="@color/black"
            ></TextView>
        <ImageButton
            android:id="@+id/bus_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arrow"
            android:gravity="right"
            android:background="@color/white"
            >

        </ImageButton>
    </LinearLayout>
<!--    车站功能介绍-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:text="车站详情功能介绍"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="23dp"
            android:textColor="@color/black"
            ></TextView>
        <ImageButton
            android:id="@+id/stop_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arrow"
            android:gravity="right"
            android:background="@color/white"
            >

        </ImageButton>
    </LinearLayout>
<!--    站次添加功能-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:text="站次添加功能介绍"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="23dp"
            android:textColor="@color/black"
            ></TextView>
        <ImageButton
            android:id="@+id/bus_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arrow"
            android:gravity="right"
            android:background="@color/white"
            >

        </ImageButton>
    </LinearLayout>
<!--广告-->
    <LinearLayout
        android:layout_width="421dp"
        android:layout_height="93dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/text_border"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <!--      相关推荐-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bluebutton_style"
                android:text="相关推荐"
                android:textColor="@color/white"></Button>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ad_border"
                    android:text="广告"
                    android:textSize="10dp"></Button>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@color/black"></View>

        <View
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/black"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/ad_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/advertisemnet"></ImageView>

            <TextView
                android:id="@+id/ad_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/ad_pic"
                android:text="悍匪牌AWP"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/ad_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ad_head"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ad_pic"
                android:text="成为真正的Ganster,只要4750，快快起大狙吧"></TextView>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/ad_head"
                android:layout_toRightOf="@+id/ad_text"
                android:background="@color/white"
                android:src="@drawable/arrow"></ImageButton>

        </RelativeLayout>

        <View
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/black"></View>
    </LinearLayout>

</LinearLayout>