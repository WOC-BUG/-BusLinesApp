<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/station2stationLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/stationBusNumber"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bus_border"
            android:text="乘坐72路" />

        <ImageView
            android:id="@+id/iconLine"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/stationBusNumber"
            android:background="@mipmap/icon_line_end" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iconLine"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="传媒大学站"
                android:textColor="@color/orange"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/nextStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四惠站"
                android:textColor="@color/orange" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/busLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_weight="1"
                android:id="@+id/carName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="汽车名"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/text_view_border"
                android:textColor="@color/white"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/departureTime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="发车时间"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/text_view_border"
                android:textColor="@color/white"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/arriveTime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="到站时间"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/text_view_border"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/busLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/busLinearLayout"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/carNameItem"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="汽车名"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/text_view_border2"
                android:textColor="#666666"/>
            <TextView
                android:id="@+id/departureTimeItem"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="发车时间"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/text_view_border2"
                android:textColor="#666666"/>
            <TextView
                android:id="@+id/arriveTimeItem"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="到站时间"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/text_view_border2"
                android:textColor="#666666"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
